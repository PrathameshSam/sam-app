pipeline{
    agent any
    parameters{
        choice(name: goal, choices=['install', 'package', 'test'], description: "Select a Goal")
    }
    stages{
        stage("Build"){
            steps{
            if(params.goal == "install"){
                        sh 'mvn clean install'
                } else if(params.goal == "package"){
                        sh 'mvn package'
                } else if(params.goal=="test"){
                        sh 'mvn package'
                }
            }
        }
    }
}